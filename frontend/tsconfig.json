{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "ES2019"],
    "allowJs": false,
    "noFallthroughCasesInSwitch": true,
    "noEmit": false,
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "importHelpers": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "~src/*": ["src/*"],
      "~helpers/*": ["src/helpers/*"],
      "~models/*": ["src/models/*"],
      "~pages/*": ["src/pages/*"],
      "~test/*": ["tests/*"],
      "*": [
        "node_modules/*",
        "node_modules/@types/*"
      ]
    }
  }
}
